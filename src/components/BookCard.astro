---
export interface Props {
  title: string;
  description: string;
  image: string;
  url: string;
}

const { title, description, image, url } = Astro.props;
---

<div class="flex justify-between gap-4">
  <div>
    <h3 class="mb-2 text-xl font-bold">{title}</h3>
    <p>{description}</p>
  </div>
  <img src={image} class="w-1/5 rounded" alt={`${title} - book cover`} />
</div>
